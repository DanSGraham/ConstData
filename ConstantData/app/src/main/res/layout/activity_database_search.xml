<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".DatabaseSearch"
    android:padding="0dp">

    <LinearLayout
        android:id="@+id/page_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/db_tabs"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:background="@drawable/toggle_list_background">

            <RadioButton
                android:id="@+id/molecule_data"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".33"
                android:padding="0dp"
                android:text=""
                android:checked="true"
                android:textSize="0sp"
                android:button="@android:color/transparent"
                style="@style/moleculeDataTab"
                android:background="@drawable/molecule_data_tab_bg"
                />

            <RadioButton
                android:id="@+id/calculator"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".33"
                android:padding="0dp"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:text=""
                android:textSize="0sp"
                style="@style/moleculeDataTab"
                android:background="@drawable/molecule_data_tab_bg"
                />

            <RadioButton
                android:id="@+id/IRView"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".33"
                android:padding="0dp"
                android:layout_marginRight="1dp"
                android:text=""
                android:textSize="0sp"
                style="@style/moleculeDataTab"
                android:background="@drawable/molecule_data_tab_bg"
                />


        </RadioGroup>

        <fragment
            android:name="dan.constantdata.MoleculeSearch"
            android:id="@+id/fragment_loc"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            tools:layout="@layout/fragment_molecule_search" />

        <!--<EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_bar"
            android:hint="@string/search_bar"/>


              <TextView android:id="@+id/content"
                  android:text="@string/content"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" /> -->

    </LinearLayout>

</RelativeLayout>
