<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".DatabaseSearch"
    android:padding="0dp">

    <LinearLayout
        android:id="@+id/page_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/db_container"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:background="@drawable/toggle_list_background">

            <ToggleButton
                android:id="@+id/atomic_weights"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".25"
                android:padding="0dp"
                android:textOn="@string/atomic_weights"
                android:textOff="@string/atomic_weights"
                android:textSize="0sp"
                style="@style/atomicMassToggleButton"
                android:background="@drawable/am_toggle_bg"
                />

            <ToggleButton
                android:id="@+id/ionization_energy"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".25"
                android:padding="0dp"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:textOn="@string/ionization_energy"
                android:textOff="@string/ionization_energy"
                android:textSize="0sp"
                style="@style/ionEnergyToggleButton"
                android:background="@drawable/ie_toggle_bg"
                />

            <ToggleButton
                android:id="@+id/physics_constants"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".25"
                android:padding="0dp"
                android:layout_marginRight="1dp"
                android:textOn="@string/physics_constants"
                android:textOff="@string/physics_constants"
                android:textSize="0sp"
                style="@style/constantsToggleButton"
                android:background="@drawable/con_toggle_bg"
                />

            <ToggleButton
                android:id="@+id/local_database"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".25"
                android:padding="0dp"
                android:textOn="@string/physics_constants"
                android:textOff="@string/physics_constants"
                android:textSize="0sp"
                style="@style/constantsToggleButton"
                android:background="@drawable/con_toggle_bg"
                />

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_bar"
            android:hint="@string/search_bar"/>


              <TextView android:id="@+id/content"
                  android:text="@string/content"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
