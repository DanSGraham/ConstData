<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/NavBar</item>
        <item name="actionBarStyle">@style/NavBar</item>
        <item name="android:actionOverflowButtonStyle">@style/MyOverFlow</item>
    </style>

    <color name="action_bar_background">#19440C</color>

    <style name="MyOverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@android:drawable/ic_menu_share</item>
    </style>


    <style name="NavBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/action_bar_background</item>
        <item name="background">@color/action_bar_background</item>

        <item name="android:backgroundStacked">@color/action_bar_background</item>
        <item name="backgroundStacked">@color/action_bar_background</item>

        <!-- Light.DarkActionBar specific -->


    </style>

    <style name="CalculatorNumButton" parent="@android:style/Widget.Button">

        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/calculatorbutton</item>
        <item name="android:clickable">true</item>
    </style>


</resources>
